    <script type="text/javascript">
        $(document).bind("ready", function () {
            
           
        });
       

        function openMenu(e) {
            $(e.item).children(".k-link").removeClass("backgwhite");
        }
        function closeMenu(e) {
            if ($(e.item).hasClass("m-button-active")) {

            } else {
                $(e.item).children(".k-link").addClass("backgwhite");
            }
        }
        function imgError(image) {
            image.onerror = "";
            image.src = "@Url.Content("~/Content/NoImageAvailable.png")";
            return true;
        }

        function checkdate(textbox) {
            if (!/^\d{1,2}\/\d{1,2}\/\d{4}$/.test($(textbox).val())) {
                $(textbox).data("kendoDatePicker").value("");
            }
        }


        function setAction(aString, target) {
            for (m = 0; m < document.forms.length; m++) {
                if (document.forms[m].name == "form1") {
                    document.forms[m].action = String(aString);
                }
                if (String(target) != "undefined") {
                    document.forms[m].target = String(target);
                } else {
                    document.forms[m].target = "_self";
                }
            }
        }
        
        function WriteNoty(type, text) {
            var n = noty({
                text: text,
                type: type,//sucess || alert || confirm || warning || information ||error
                dismissQueue: true,
                layout: 'topRight',
                theme: 'defaultTheme'
            });
        }

    </script>
